<div class="container">
	<div class="row">
		<h1>Customers and Pets</h1>
	</div>
	
	<div class="row">
		<div class="col-lg-2">
			<nav class="nav flex-column">
				<%= link_to 'Add Customers', add_customers_path %>
				<%= link_to 'Remove Customers', truncate_customers_path %>
				<%= link_to 'Add Pets', add_pets_path %>
				<%= link_to 'Rearrange Pets', randomize_pets_path %>
				<%= link_to 'Remove Pets', truncate_pets_path %>
			</nav>
		</div>

		<div class="col-lg-9">
			<div class="row">

			<% @customers.each do |customer| %>
				<div class="col-lg-4	customer">
					<h3><%= customer.name %></h3>
					<p>email: <%= customer.email %></p>
					<p>city: <%= customer.city %></p>
					<% if customer.pets %>
						<p>pet(s):</p>
						<ul>
							<% customer.pets.each do |pet| %>
								<li><%= pet.name %></li>
							<% end %>
						</ul>
					<% end %>
				</div>
			<% end %>
			
			</div>
		</div>
	</div>
</div>
