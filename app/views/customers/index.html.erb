<h1>Customers</h1>

<% @customers.each do |customer| %>
	<h3><%= customer.name %></h3>
	<p>email: <%= customer.email %></p>
	<p>city: <%= customer.city %></p>
	<% if customer.pets %>
		<p>pet(s):</p>
		<ul>
		<% customer.pets.each do |pet| %>
			<li><%= pet.name %></li>
			<% end %>
			</ul>
			<% end %>
			<hr />
	<% end %>